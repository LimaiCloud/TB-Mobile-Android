<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"  >


    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@mipmap/logo_icon" />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/login_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="165dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/login_iv_usn" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:hint="@string/input_username"
                android:textColorHint="@color/login_textHint_color"
                android:textSize="13dp" />
        </LinearLayout>

        <View
            android:layout_width="275dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/login_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/login_iv_pwd" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:hint="@string/input_paw"
                android:password="true"
                android:textColorHint="@color/login_textHint_color"
                android:textSize="13dp" />

        </LinearLayout>

        <View
            android:layout_width="275dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/login_line_color" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auto_login"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="275dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@mipmap/login_btn_bg" />

        <ImageView
            android:id="@+id/iv_bottom_bg"
            android:layout_width="236dp"
            android:layout_height="188dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="27dp"
            android:src="@mipmap/login_iv_bg" />
    </LinearLayout>
</RelativeLayout>
